<!DOCTYPE html>
<html>
  <head>
    <title>Admin - Proyecto IRU</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="turbo-visit-control" content="reload">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "admin", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    <!-- Alpine.js -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    
    <style>
      [x-cloak] { display: none !important; }
    </style>
  </head>

  <body data-controller="segmentation-users">
    <div class="admin-layout">
      <!-- Sidebar -->
      <aside class="admin-sidebar">
        <!-- Sidebar Header -->
        <div class="admin-sidebar__header">
          <div class="brand">
            <span class="brand__icon">
              <i class="fa-solid fa-building text-blue-600"></i>
            </span>
            <span class="brand__text">IRU RRHH</span>
          </div>
          <%= render BadgeComponent.new(variant: :primary) do %>
            Admin
          <% end %>
        </div>

        <!-- Navigation -->
        <nav class="admin-sidebar__nav">
          <ul class="nav-list">
            <li>
              <%= link_to admin_root_path, class: "nav-link #{current_page?(admin_root_path) ? 'nav-link--active' : ''}" do %>
                <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
                Dashboard
              <% end %>
            </li>

            <li>
              <%= link_to admin_users_path, class: "nav-link #{current_page?(admin_users_path) ? 'nav-link--active' : ''}" do %>
                <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
                Usuarios
              <% end %>
            </li>

            <li>
              <%= link_to admin_segmentation_path, class: "nav-link #{current_page?(admin_segmentation_path) ? 'nav-link--active' : ''}" do %>
                <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                </svg>
                Segmentación
              <% end %>
            </li>

            <!-- Políticas de Tiempo Libre -->
            <li class="nav-section-divider">
              <span class="nav-section-title">Políticas de Tiempo</span>
            </li>

            <li>
              <%= link_to admin_policy_types_path, class: "nav-link #{current_page?(controller: 'admin/policy_types') ? 'nav-link--active' : ''}" do %>
                <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                Tipos de Política
              <% end %>
            </li>

            <li>
              <%= link_to admin_policies_path, class: "nav-link #{current_page?(controller: 'admin/policies') ? 'nav-link--active' : ''}" do %>
                <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                Políticas
              <% end %>
            </li>

            <li>
              <%= link_to admin_time_off_policies_path, class: "nav-link #{current_page?(controller: 'admin/time_off_policies') ? 'nav-link--active' : ''}" do %>
                <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Vacaciones (Legacy)
              <% end %>
            </li>

            <!-- Geografía -->
            <li class="nav-section-divider">
              <span class="nav-section-title">Geografía</span>
            </li>

            <li>
              <%= link_to admin_regions_path, class: "nav-link #{current_page?(controller: 'admin/regions') ? 'nav-link--active' : ''}" do %>
                <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Regiones
              <% end %>
            </li>

            <li>
              <%= link_to admin_offices_path, class: "nav-link #{current_page?(controller: 'admin/offices') ? 'nav-link--active' : ''}" do %>
                <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
                Sedes
              <% end %>
            </li>

            <li>
              <%= link_to admin_holidays_path, class: "nav-link #{current_page?(controller: 'admin/holidays') ? 'nav-link--active' : ''}" do %>
                <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Festivos
              <% end %>
            </li>
          </ul>
        </nav>

        <!-- Sidebar Footer -->
        <div class="admin-sidebar__footer">
          <div class="user-profile">
            <div class="user-profile__avatar">
              <%= current_user.email.first.upcase %>
            </div>
            <div class="user-profile__info">
              <p class="user-profile__email">
                <%= current_user.email %>
              </p>
              <p class="user-profile__role">
                <%= current_user.role %>
              </p>
            </div>
          </div>
          <%= button_to destroy_user_session_path, method: :delete, class: "logout-btn" do %>
            <i class="fa-solid fa-right-from-bracket"></i>
            <span>Cerrar sesión</span>
          <% end %>
        </div>
      </aside>

      <!-- Main Content -->
      <div class="admin-layout__content">
        <!-- Top Header -->
        <header class="admin-header">
          <div class="admin-header__container">
            <div class="admin-header__title">
              <h1><%= yield :page_title %></h1>
            </div>
            <div class="admin-header__actions">
              <button class="icon-btn" title="Notificaciones">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                </svg>
              </button>
              <button class="icon-btn" title="Configuración">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </button>
              <div class="user-profile__avatar" title="<%= current_user.email %>">
                <%= current_user.email.first(2).upcase %>
              </div>
            </div>
          </div>
        </header>

        <!-- Alerts -->
        <% if notice %>
          <%= render AlertComponent.new(type: :success) do %>
            <%= notice %>
          <% end %>
        <% end %>
        
        <% if alert %>
          <%= render AlertComponent.new(type: :error) do %>
            <%= alert %>
          <% end %>
        <% end %>

        <!-- Page Content -->
        <main class="admin-layout__main">
          <%= yield %>
        </main>
      </div>
    </div>
    
    <%= yield :modals %>
  </body>
</html>
