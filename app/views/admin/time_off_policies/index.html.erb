<% content_for :page_title, "Políticas de Ausencias" %>

<%
  # Íconos Font Awesome por tipo de política
  policy_icons = {
    'vacation' => 'fa-umbrella-beach',
    'sick_leave' => 'fa-briefcase-medical',
    'personal_day' => 'fa-person-walking',
    'study_leave' => 'fa-graduation-cap',
    'maternity_leave' => 'fa-baby-carriage',
    'paternity_leave' => 'fa-baby',
    'bereavement_leave' => 'fa-dove',
    'remote_work' => 'fa-house-laptop',
    'other' => 'fa-file-lines'
  }
  
  # Color map por display_color
  color_classes = {
    'blue' => 'blue',
    'green' => 'green',
    'purple' => 'purple',
    'orange' => 'orange',
    'pink' => 'pink',
    'red' => 'red',
    'yellow' => 'yellow',
    'indigo' => 'indigo'
  }
%>

<div class="policy-container">
  <!-- Header -->
  <div class="policy-header">
    <div class="policy-title-section">
      <h1 class="policy-title">Tipos de políticas</h1>
      <p class="policy-subtitle">Gestiona las políticas de vacaciones, permisos y licencias</p>
    </div>
    
    <div>
      <%= render ButtonComponent.new(variant: :primary, size: :md, href: new_admin_time_off_policy_path) do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Nuevo tipo de política
      <% end %>
    </div>
  </div>

  <!-- Grid de políticas -->
  <% if @policies.any? %>
    <div class="policy-grid">
      <% @policies.each do |policy| %>
        <% color_class = color_classes[policy.display_color] || 'blue' %>
        
        <div class="policy-card">
          <!-- Header con ícono y menú -->
          <div class="policy-card-header">
            <div class="policy-icon-box policy-icon-box--<%= color_class %>">
              <i class="fa-solid <%= policy_icons[policy.policy_type] %>"></i>
            </div>
            
            <div style="position: relative;" x-data="{ open: false }">
              <button @click="open = !open" class="policy-menu-btn">
                <svg fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z" />
                </svg>
              </button>
              
              <div x-show="open" @click.away="open = false" x-cloak class="policy-dropdown-menu">
                <%= link_to admin_time_off_policy_path(policy), class: "menu-item" do %>
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                  Ver detalles
                <% end %>
                
                <%= link_to edit_admin_time_off_policy_path(policy), class: "menu-item" do %>
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                  </svg>
                  Editar
                <% end %>
                
                <%= link_to toggle_active_admin_time_off_policy_path(policy), method: :patch, class: "menu-item" do %>
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <% if policy.active? %>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" />
                    <% else %>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    <% end %>
                  </svg>
                  <%= policy.active? ? 'Desactivar' : 'Activar' %>
                <% end %>
                
                <div class="menu-divider"></div>
                
                <%= button_to admin_time_off_policy_path(policy), 
                  method: :delete,
                  data: { turbo_confirm: "¿Estás seguro de eliminar esta política?" },
                  class: "menu-item menu-item--danger" do %>
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                  </svg>
                  Eliminar
                <% end %>
              </div>
            </div>
          </div>

          <!-- Nombre -->
          <h3 class="policy-name"><%= policy.name %></h3>
          
          <!-- Información -->
          <div class="policy-info-list">
            <% if policy.days_per_year.present? %>
              <div class="policy-info-item">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <span class="value"><%= policy.days_per_year %></span>
                <span class="ml-1">días por año</span>
              </div>
            <% end %>
            
            <div class="policy-info-item">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <% if policy.requires_approval? %>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                <% else %>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                <% end %>
              </svg>
              <%= policy.requires_approval? ? 'Requiere aprobación' : 'Sin aprobación' %>
            </div>
          </div>

          <!-- Footer -->
          <div class="policy-footer">
            <span class="policy-status-badge policy-status-badge--<%= policy.active? ? 'active' : 'inactive' %>">
              <%= policy.active? ? 'Activa' : 'Inactiva' %>
            </span>
            
            <div class="policy-employees-count">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
              <span class="count-number"><%= policy.employees_count %></span>
              <span>personas</span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="policy-empty-state">
      <div class="policy-empty-icon">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      </div>
      <h3 class="policy-empty-title">No hay políticas creadas</h3>
      <p class="policy-empty-description">Comienza creando tu primera política de ausencias</p>
      <%= render ButtonComponent.new(variant: :primary, size: :md, href: new_admin_time_off_policy_path) do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Crear política
      <% end %>
    </div>
  <% end %>
</div>
