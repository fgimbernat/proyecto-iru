<% content_for :page_title, "Políticas de Ausencias" %>

<div class="px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="flex items-center justify-between mb-10">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Tipos de políticas</h1>
      <p class="mt-2 text-gray-600">Gestiona las políticas de vacaciones, permisos y licencias</p>
    </div>
    
    <%= link_to new_admin_time_off_policy_path, class: "inline-flex items-center px-5 py-2.5 border border-transparent rounded-xl text-sm font-semibold text-white bg-blue-600 hover:bg-blue-700 transition-all shadow-md hover:shadow-lg" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      Nuevo tipo de política
    <% end %>
  </div>

  <!-- Grid de políticas -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
    <% @policies.each do |policy| %>
      <div class="bg-white border border-gray-200 rounded-xl p-6 hover:border-blue-300 hover:shadow-xl transition-all duration-200 group">
        <!-- Icono y menú -->
        <div class="flex items-start justify-between mb-5">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-<%= policy.display_color %>-50 to-<%= policy.display_color %>-100 border border-<%= policy.display_color %>-200 flex items-center justify-center text-xl shadow-sm">
              <%= policy.display_icon %>
            </div>
          </div>
          
          <div class="relative" x-data="{ open: false }">
            <button @click="open = !open" class="p-1.5 text-gray-400 hover:text-gray-600 hover:bg-gray-50 rounded-lg transition-all">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z" />
              </svg>
            </button>
            
            <div x-show="open" @click.away="open = false" x-cloak class="absolute right-0 mt-2 w-48 bg-white rounded-xl shadow-xl border border-gray-200 py-1 z-10">
              <%= link_to admin_time_off_policy_path(policy), class: "flex items-center px-4 py-2.5 text-sm text-gray-700 hover:bg-gray-50 transition-colors" do %>
                <svg class="w-4 h-4 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
                Ver detalles
              <% end %>
              
              <%= link_to edit_admin_time_off_policy_path(policy), class: "flex items-center px-4 py-2.5 text-sm text-gray-700 hover:bg-gray-50 transition-colors" do %>
                <svg class="w-4 h-4 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
                Editar
              <% end %>
              
              <%= link_to toggle_active_admin_time_off_policy_path(policy), method: :patch, class: "flex items-center px-4 py-2.5 text-sm text-gray-700 hover:bg-gray-50 transition-colors" do %>
                <svg class="w-4 h-4 mr-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <% if policy.active? %>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" />
                  <% else %>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  <% end %>
                </svg>
                <%= policy.active? ? 'Desactivar' : 'Activar' %>
              <% end %>
              
              <div class="border-t border-gray-100 my-1"></div>
              
              <%= button_to admin_time_off_policy_path(policy), 
                method: :delete,
                data: { turbo_confirm: "¿Estás seguro de eliminar esta política?" },
                class: "w-full flex items-center px-4 py-2.5 text-sm text-red-600 hover:bg-red-50 transition-colors" do %>
                <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
                Eliminar
              <% end %>
            </div>
          </div>
        </div>

        <!-- Nombre y tipo -->
        <h3 class="text-base font-semibold text-gray-900 mb-3">
          <%= policy.name %>
        </h3>
        
        <!-- Info -->
        <div class="space-y-2.5 mb-5">
          <% if policy.days_per_year.present? %>
            <div class="flex items-center text-sm text-gray-600">
              <svg class="w-4 h-4 mr-2.5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <span class="font-medium text-gray-700"><%= policy.days_per_year %></span>
              <span class="ml-1">días por año</span>
            </div>
          <% end %>
          
          <div class="flex items-center text-sm text-gray-600">
            <svg class="w-4 h-4 mr-2.5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <% if policy.requires_approval? %>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              <% else %>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              <% end %>
            </svg>
            <%= policy.requires_approval? ? 'Requiere aprobación' : 'Sin aprobación' %>
          </div>
        </div>

        <!-- Estadísticas -->
        <div class="flex items-center justify-between pt-4 border-t border-gray-100">
          <span class="inline-flex items-center px-2.5 py-1 rounded-lg text-xs font-semibold <%= policy.active? ? 'bg-emerald-50 text-emerald-700 border border-emerald-200' : 'bg-gray-50 text-gray-600 border border-gray-200' %>">
            <%= policy.active? ? 'Activa' : 'Inactiva' %>
          </span>
          
          <div class="flex items-center gap-1.5 text-sm text-gray-500">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            <span class="font-semibold text-gray-700"><%= policy.employees_count %></span>
            <span>personas</span>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Estado vacío -->
  <% if @policies.empty? %>
    <div class="text-center py-16">
      <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gray-100 mb-4">
        <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No hay políticas creadas</h3>
      <p class="text-gray-500 mb-6">Comienza creando tu primera política de ausencias</p>
      <%= link_to new_admin_time_off_policy_path, class: "inline-flex items-center px-5 py-2.5 border border-transparent rounded-xl text-sm font-semibold text-white bg-blue-600 hover:bg-blue-700 transition-all shadow-md hover:shadow-lg" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Crear política
      <% end %>
    </div>
  <% end %>
</div>
