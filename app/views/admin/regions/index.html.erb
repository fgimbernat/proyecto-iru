<% content_for :page_title, "Regiones" %>

<div class="resource-container">
  <!-- Header -->
  <div class="resource-header">
    <div class="resource-title-section">
      <h1 class="resource-title">Regiones</h1>
      <p class="resource-subtitle">Gestiona las regiones geográficas y sus sedes asociadas</p>
    </div>
    
    <div class="resource-actions">
      <% if policy(Region).create? %>
        <%= render ButtonComponent.new(variant: :primary, size: :md, href: new_admin_region_path) do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Nueva Región
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Count -->
  <div class="resource-filters-card">
    <div class="resource-count">
      <span class="count-number"><%= @regions.count %></span>
      <span><%= @regions.count == 1 ? 'región' : 'regiones' %></span>
    </div>
  </div>

  <!-- Table -->
  <% if @regions.any? %>
    <div class="resource-table-card">
      <div class="resource-table-wrapper">
        <table class="resource-table">
          <thead class="resource-table-header">
            <tr>
              <th>Nombre</th>
              <th>Descripción</th>
              <th class="text-center">Sedes</th>
              <th class="text-center">Festivos</th>
              <th class="text-center">Estado</th>
              <th class="text-right">Acciones</th>
            </tr>
          </thead>
          <tbody class="resource-table-body">
            <% @regions.each do |region| %>
              <tr>
                <td>
                  <div class="cell-title"><%= region.name %></div>
                </td>
                <td>
                  <% if region.description.present? %>
                    <%= region.description.truncate(50) %>
                  <% else %>
                    <span class="cell-muted">—</span>
                  <% end %>
                </td>
                <td class="text-center">
                  <strong><%= region.offices_count %></strong>
                </td>
                <td class="text-center">
                  <strong><%= region.holidays_count %></strong>
                </td>
                <td class="text-center">
                  <%= render BadgeComponent.new(type: region.active? ? :success : :neutral) do %>
                    <%= region.active? ? 'Activa' : 'Inactiva' %>
                  <% end %>
                </td>
                <td>
                  <div class="resource-actions-cell">
                    <%= link_to admin_region_path(region), class: "resource-action-link action-view", title: "Ver detalles" do %>
                      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                      </svg>
                    <% end %>
                    
                    <% if policy(region).update? %>
                      <%= link_to edit_admin_region_path(region), class: "resource-action-link action-edit", title: "Editar" do %>
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                      <% end %>
                    <% end %>
                    
                    <% if policy(region).destroy? %>
                      <%= button_to admin_region_path(region), 
                        method: :delete,
                        data: { turbo_confirm: "¿Estás seguro de eliminar esta región?" },
                        class: "resource-action-link action-delete",
                        title: "Eliminar" do %>
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                      <% end %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Pagination -->
    <% if @regions.total_pages > 1 %>
      <div class="mt-6">
        <%= paginate @regions %>
      </div>
    <% end %>
  <% else %>
    <!-- Empty State -->
    <div class="resource-table-card">
      <div class="resource-empty-state">
        <div class="resource-empty-icon">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h3 class="resource-empty-title">No hay regiones creadas</h3>
        <p class="resource-empty-description">Comienza creando tu primera región geográfica.</p>
        <% if policy(Region).create? %>
          <%= render ButtonComponent.new(variant: :primary, size: :md, href: new_admin_region_path) do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Nueva Región
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
