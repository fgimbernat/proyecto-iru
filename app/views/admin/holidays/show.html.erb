<% content_for :page_title, @holiday.name %>

<div class="px-4 sm:px-6 lg:px-8 py-8">
  <%= link_to admin_holidays_path, class: "inline-flex items-center text-sm text-gray-600 hover:text-gray-900 mb-4" do %>
    <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
    </svg>
    Volver a festivos
  <% end %>
  
  <div class="bg-white rounded-xl border border-gray-200 p-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-6"><%= @holiday.name %></h1>
    
    <dl class="space-y-4">
      <div>
        <dt class="text-sm font-medium text-gray-500">Fecha</dt>
        <dd class="mt-1 text-lg text-gray-900"><%= I18n.l(@holiday.date, format: :long) %></dd>
      </div>
      
      <div>
        <dt class="text-sm font-medium text-gray-500">Regi√≥n</dt>
        <dd class="mt-1 text-lg text-gray-900"><%= @holiday.region_name %></dd>
      </div>
      
      <div>
        <dt class="text-sm font-medium text-gray-500">Estado</dt>
        <dd class="mt-1">
          <%= render BadgeComponent.new(type: @holiday.active? ? :success : :neutral) do %>
            <%= @holiday.active? ? 'Activo' : 'Inactivo' %>
          <% end %>
        </dd>
      </div>
    </dl>
    
    <% if policy(@holiday).update? %>
      <div class="mt-8 pt-6 border-t border-gray-200">
        <%= link_to edit_admin_holiday_path(@holiday) do %>
          <%= render ButtonComponent.new(variant: :primary) do %>
            Editar
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
