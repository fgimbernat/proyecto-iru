<% content_for :page_title, "Festivos" %>

<div class="resource-container">
  <!-- Header -->
  <div class="resource-header">
    <div class="resource-title-section">
      <h1 class="resource-title">Festivos</h1>
      <p class="resource-subtitle">Gestiona los días festivos por región</p>
    </div>
    
    <div class="resource-actions">
      <% if policy(Holiday).create? %>
        <%= render ButtonComponent.new(variant: :primary, size: :md, href: new_admin_holiday_path) do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Nuevo Festivo
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Filters -->
  <div class="resource-filters-card">
    <div class="resource-filters-header">
      <%= form_with url: admin_holidays_path, method: :get, class: "resource-filters-form" do |f| %>
        <div class="resource-filter-group">
          <%= f.label :region_id, "Región", class: "resource-filter-label" %>
          <%= f.select :region_id, 
            options_from_collection_for_select(@regions, :id, :name, params[:region_id]),
            { include_blank: "Todas las regiones" },
            class: "resource-filter-select" %>
        </div>
        
        <div class="resource-filter-group">
          <%= f.label :year, "Año", class: "resource-filter-label" %>
          <%= f.select :year,
            options_for_select(@years, params[:year] || Date.current.year),
            {},
            class: "resource-filter-select" %>
        </div>
        
        <div style="padding-top: 22px;">
          <%= render ButtonComponent.new(variant: :primary, type: "submit", size: :md) do %>
            Filtrar
          <% end %>
        </div>
      <% end %>
    </div>
    
    <div class="resource-count">
      <span class="count-number"><%= @holidays.count %></span>
      <span><%= @holidays.count == 1 ? 'festivo' : 'festivos' %></span>
    </div>
  </div>

  <!-- Table -->
  <% if @holidays.any? %>
    <div class="resource-table-card">
      <div class="resource-table-wrapper">
        <table class="resource-table">
          <thead class="resource-table-header">
            <tr>
              <th>Nombre</th>
              <th>Fecha</th>
              <th>Región</th>
              <th class="text-center">Estado</th>
              <th class="text-right">Acciones</th>
            </tr>
          </thead>
          <tbody class="resource-table-body">
            <% @holidays.each do |holiday| %>
              <tr style="<%= 'background: #eff6ff;' if holiday.date == Date.current %>">
                <td>
                  <div class="cell-title"><%= holiday.name %></div>
                </td>
                <td>
                  <div style="display: flex; align-items: center; gap: 6px;">
                    <svg style="width: 16px; height: 16px; color: #9ca3af; flex-shrink: 0;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    <span><%= I18n.l(holiday.date, format: :long) %></span>
                  </div>
                </td>
                <td><%= holiday.region_name %></td>
                <td class="text-center">
                  <div style="display: flex; align-items: center; justify-content: center; gap: 6px; flex-wrap: wrap;">
                    <%= render BadgeComponent.new(type: holiday.active? ? :success : :neutral) do %>
                      <%= holiday.active? ? 'Activo' : 'Inactivo' %>
                    <% end %>
                    
                    <% if holiday.date == Date.current %>
                      <%= render BadgeComponent.new(type: :info) do %>
                        Hoy
                      <% end %>
                    <% elsif holiday.upcoming? %>
                      <%= render BadgeComponent.new(type: :warning) do %>
                        Próximo
                      <% end %>
                    <% end %>
                  </div>
                </td>
                <td>
                  <div class="resource-actions-cell">
                    <% if policy(holiday).update? %>
                      <%= link_to edit_admin_holiday_path(holiday), class: "resource-action-link action-edit", title: "Editar" do %>
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                      <% end %>
                    <% end %>
                    
                    <% if policy(holiday).destroy? %>
                      <%= button_to admin_holiday_path(holiday), 
                        method: :delete,
                        data: { turbo_confirm: "¿Estás seguro de eliminar este festivo?" },
                        class: "resource-action-link action-delete",
                        title: "Eliminar" do %>
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                      <% end %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Pagination -->
    <% if @holidays.total_pages > 1 %>
      <div class="mt-6">
        <%= paginate @holidays %>
      </div>
    <% end %>
  <% else %>
    <!-- Empty State -->
    <div class="resource-table-card">
      <div class="resource-empty-state">
        <div class="resource-empty-icon">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
        <h3 class="resource-empty-title">
          <% if params[:region_id].present? || params[:year].present? %>
            No hay festivos con estos filtros
          <% else %>
            No hay festivos creados
          <% end %>
        </h3>
        <p class="resource-empty-description">
          <% if params[:region_id].present? || params[:year].present? %>
            Intenta cambiar los filtros o crea un nuevo festivo.
          <% else %>
            Comienza agregando festivos para tus regiones.
          <% end %>
        </p>
        <% if policy(Holiday).create? %>
          <%= render ButtonComponent.new(variant: :primary, size: :md, href: new_admin_holiday_path) do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Nuevo Festivo
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
