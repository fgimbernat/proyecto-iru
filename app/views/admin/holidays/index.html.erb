<% content_for :page_title, "Festivos" %>

<div class="px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Festivos</h1>
      <p class="mt-2 text-gray-600">Gestiona los días festivos por región</p>
    </div>
    
    <% if policy(Holiday).create? %>
      <%= link_to new_admin_holiday_path, class: "inline-flex items-center px-5 py-2.5 border border-transparent rounded-xl text-sm font-semibold text-white bg-blue-600 hover:bg-blue-700 transition-all shadow-md hover:shadow-lg" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Nuevo Festivo
      <% end %>
    <% end %>
  </div>

  <!-- Filtros -->
  <div class="bg-white rounded-lg border border-gray-200 p-4 mb-6">
    <%= form_with url: admin_holidays_path, method: :get, class: "grid grid-cols-1 md:grid-cols-3 gap-4" do |f| %>
      <div>
        <%= f.label :region_id, "Filtrar por región:", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :region_id, 
          options_from_collection_for_select(@regions, :id, :name, params[:region_id]),
          { include_blank: "Todas las regiones" },
          class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>
      
      <div>
        <%= f.label :year, "Año:", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :year,
          options_for_select(@years, params[:year] || Date.current.year),
          {},
          class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>
      
      <div class="flex items-end">
        <%= render ButtonComponent.new(variant: :primary, type: "submit") do %>
          Filtrar
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Lista de festivos -->
  <div class="bg-white shadow-sm rounded-xl border border-gray-200 overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Región</th>
          <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
          <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @holidays.each do |holiday| %>
          <tr class="hover:bg-gray-50 transition-colors <%= 'bg-blue-50' if holiday.date == Date.current %>">
            <td class="px-6 py-4">
              <div class="text-sm font-medium text-gray-900"><%= holiday.name %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <span class="text-sm text-gray-900"><%= I18n.l(holiday.date, format: :long) %></span>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm text-gray-600"><%= holiday.region_name %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-center">
              <div class="flex items-center justify-center gap-2">
                <%= render BadgeComponent.new(type: holiday.active? ? :success : :neutral, size: :sm) do %>
                  <%= holiday.active? ? 'Activo' : 'Inactivo' %>
                <% end %>
                
                <% if holiday.date == Date.current %>
                  <%= render BadgeComponent.new(type: :info, size: :sm) do %>
                    Hoy
                  <% end %>
                <% elsif holiday.upcoming? %>
                  <%= render BadgeComponent.new(type: :warning, size: :sm) do %>
                    Próximo
                  <% end %>
                <% end %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <div class="flex items-center justify-end gap-2">
                <% if policy(holiday).update? %>
                  <%= link_to edit_admin_holiday_path(holiday), class: "text-gray-600 hover:text-gray-900" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                  <% end %>
                <% end %>
                
                <% if policy(holiday).destroy? %>
                  <%= button_to admin_holiday_path(holiday), 
                    method: :delete,
                    data: { turbo_confirm: "¿Estás seguro de eliminar este festivo?" },
                    class: "text-red-600 hover:text-red-900" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                  <% end %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Paginación -->
  <% if @holidays.total_pages > 1 %>
    <div class="mt-6">
      <%= paginate @holidays %>
    </div>
  <% end %>

  <!-- Estado vacío -->
  <% if @holidays.empty? %>
    <div class="text-center py-16 bg-white rounded-xl border border-gray-200">
      <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gray-100 mb-4">
        <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No hay festivos creados</h3>
      <p class="text-gray-500 mb-6">Comienza agregando festivos para tus regiones</p>
      <% if policy(Holiday).create? %>
        <%= link_to new_admin_holiday_path, class: "inline-flex items-center px-5 py-2.5 border border-transparent rounded-xl text-sm font-semibold text-white bg-blue-600 hover:bg-blue-700 transition-all shadow-md hover:shadow-lg" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Nuevo Festivo
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
