<%= form_with(model: [:admin, user], local: true, class: "space-y-6") do |f| %>
  <% if user.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(user.errors.count, "error") %> impidieron guardar este usuario:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Columna Izquierda: Información Básica -->
    <div class="lg:col-span-1">
      <div class="bg-gray-50 rounded-lg border-2 border-blue-500 p-6">
        <!-- Avatar -->
        <div class="mb-6 text-center relative">
          <div class="mx-auto h-32 w-32 rounded-full bg-gray-300 flex items-center justify-center relative">
            <svg class="h-16 w-16 text-gray-400" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
          </div>
          <!-- Menú de tres puntos -->
          <button type="button" class="absolute top-0 right-0 p-1 text-gray-400 hover:text-gray-600">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z" />
            </svg>
          </button>
        </div>

        <%= f.fields_for :employee do |ef| %>
          <div class="space-y-4">
            <div>
              <%= ef.label :first_name, "Nombre", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= ef.text_field :first_name, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "000" %>
            </div>

            <div>
              <%= ef.label :last_name, "Apellido", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= ef.text_field :last_name, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "0000" %>
            </div>

            <div>
              <%= ef.label :middle_name, "Apodo", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= ef.text_field :middle_name, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "Apodo" %>
            </div>

            <div>
              <%= f.label :email, "Usuario", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.text_field :email, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "00000" %>
            </div>

            <div>
              <%= f.label :password, "Contraseña", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= f.password_field :password, autocomplete: "new-password", class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "#{'0' * 30}" %>
            </div>

            <div>
              <%= ef.label :email, "Email", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= ef.email_field :email, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "Email" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Columna Derecha: Tabs de Información -->
    <div class="lg:col-span-2">
      <div x-data="{ activeTab: 'general' }" class="bg-white rounded-lg border border-gray-200">
        <!-- Tabs -->
        <div class="border-b border-gray-200">
          <nav class="-mb-px flex" aria-label="Tabs">
            <button type="button" @click="activeTab = 'general'" :class="activeTab === 'general' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'" class="w-1/4 py-4 px-1 text-center border-b-2 font-medium text-sm">
              General
            </button>
            <button type="button" @click="activeTab = 'segmentacion'" :class="activeTab === 'segmentacion' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'" class="w-1/4 py-4 px-1 text-center border-b-2 font-medium text-sm">
              Segmentación
            </button>
            <button type="button" @click="activeTab = 'permisos'" :class="activeTab === 'permisos' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'" class="w-1/4 py-4 px-1 text-center border-b-2 font-medium text-sm">
              Permisos
            </button>
          </nav>
        </div>

        <!-- Tab Content -->
        <div class="p-6">
          <%= f.fields_for :employee do |ef| %>
            <!-- Tab General -->
            <div x-show="activeTab === 'general'" class="space-y-4">
              <!-- Acordeón Ajustes generales -->
              <details open class="border border-gray-200 rounded-lg">
                <summary class="cursor-pointer p-4 bg-gray-50 hover:bg-gray-100 font-medium text-gray-900 flex justify-between items-center">
                  Ajustes generales
                  <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </summary>
                <div class="p-4 space-y-4">
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                      <%= ef.label :document_type, "Tipo de documento", class: "block text-sm font-medium text-gray-700 mb-1" %>
                      <%= ef.select :document_type, 
                          options_for_select([
                            ['DNI', 'dni'], 
                            ['Pasaporte', 'passport'], 
                            ['Otro', 'other_document']
                          ], ef.object.document_type || 'dni'),
                          {},
                          class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
                    </div>

                    <div>
                      <%= ef.label :document_number, "Número de documento", class: "block text-sm font-medium text-gray-700 mb-1" %>
                      <%= ef.text_field :document_number, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "Ej: 12345678" %>
                    </div>
                  </div>

                  <div>
                    <%= ef.label :birth_date, "Fecha de nacimiento", class: "block text-sm font-medium text-gray-700 mb-1" %>
                    <%= ef.date_field :birth_date, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
                  </div>

                  <div>
                    <%= ef.label :phone, "Celular", class: "block text-sm font-medium text-gray-700 mb-1" %>
                    <div class="flex rounded-md shadow-sm">
                      <span class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500 text-sm">
                        🇦🇷 +54
                      </span>
                      <%= ef.text_field :phone, class: "flex-1 block w-full rounded-none rounded-r-md border-gray-300 focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
                    </div>
                  </div>
                </div>
              </details>

              <!-- Acordeón Trabajo -->
              <details class="border border-gray-200 rounded-lg">
                <summary class="cursor-pointer p-4 bg-gray-50 hover:bg-gray-100 font-medium text-gray-900 flex justify-between items-center">
                  Trabajo
                  <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </summary>
                <div class="p-4 space-y-4">
                  <div>
                    <%= ef.label :hire_date, "Fecha de contratación", class: "block text-sm font-medium text-gray-700 mb-1" %>
                    <%= ef.date_field :hire_date, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
                  </div>

                  <div>
                    <%= ef.label :manager_id, "Jefe directo", class: "block text-sm font-medium text-gray-700 mb-1" %>
                    <%= ef.select :manager_id, 
                        options_from_collection_for_select(@potential_managers, :id, :full_name, ef.object.manager_id),
                        { include_blank: "Jefe directo" },
                        class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
                  </div>

                  <div>
                    <%= ef.label :department_id, "Departamento", class: "block text-sm font-medium text-gray-700 mb-1" %>
                    <%= ef.select :department_id, 
                        options_from_collection_for_select(@departments, :id, :name, ef.object.department_id),
                        { include_blank: "Departamento" },
                        class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
                  </div>

                  <div>
                    <%= ef.label :position_id, "Puesto", class: "block text-sm font-medium text-gray-700 mb-1" %>
                    <%= ef.select :position_id, 
                        options_from_collection_for_select(@positions, :id, :title, ef.object.position_id),
                        { include_blank: "Puesto" },
                        class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
                  </div>
                </div>
              </details>

              <!-- Acordeón Redes sociales -->
              <details class="border border-gray-200 rounded-lg">
                <summary class="cursor-pointer p-4 bg-gray-50 hover:bg-gray-100 font-medium text-gray-900 flex justify-between items-center">
                  Redes sociales
                  <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </summary>
                <div class="p-4 space-y-4">
                  <div>
                    <%= ef.label :linkedin, "LinkedIn", class: "block text-sm font-medium text-gray-700 mb-1" %>
                    <%= ef.text_field :linkedin, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "LinkedIn" %>
                  </div>

                  <div>
                    <%= ef.label :instagram, "Instagram", class: "block text-sm font-medium text-gray-700 mb-1" %>
                    <%= ef.text_field :instagram, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "Instagram" %>
                  </div>

                  <div>
                    <%= ef.label :facebook, "Facebook", class: "block text-sm font-medium text-gray-700 mb-1" %>
                    <%= ef.text_field :facebook, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "Facebook" %>
                  </div>

                  <div>
                    <%= ef.label :twitter, "Twitter", class: "block text-sm font-medium text-gray-700 mb-1" %>
                    <%= ef.text_field :twitter, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "Twitter" %>
                  </div>
                </div>
              </details>

              <!-- Acordeón Campos personalizados -->
              <details class="border border-gray-200 rounded-lg">
                <summary class="cursor-pointer p-4 bg-gray-50 hover:bg-gray-100 font-medium text-gray-900 flex justify-between items-center">
                  Campos personalizados
                  <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </summary>
                <div class="p-4 space-y-4">
                  <div>
                    <%= ef.label :team, "Equipo", class: "block text-sm font-medium text-gray-700 mb-1" %>
                    <%= ef.text_field :team, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "Equipo" %>
                  </div>

                  <div>
                    <%= ef.label :education, "Educación", class: "block text-sm font-medium text-gray-700 mb-1" %>
                    <%= ef.text_field :education, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "Educación" %>
                  </div>

                  <div>
                    <%= ef.label :position_title, "Cargo", class: "block text-sm font-medium text-gray-700 mb-1" %>
                    <%= ef.text_field :position_title, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "Cargo" %>
                  </div>

                  <div>
                    <%= ef.label :civil_status, "Estado civil", class: "block text-sm font-medium text-gray-700 mb-1" %>
                    <%= ef.text_field :civil_status, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "Estado civil" %>
                  </div>

                  <div>
                    <%= ef.label :languages, "Idiomas", class: "block text-sm font-medium text-gray-700 mb-1" %>
                    <%= ef.text_field :languages, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "Idiomas" %>
                  </div>

                  <div>
                    <%= ef.label :lives_in, "Vive en", class: "block text-sm font-medium text-gray-700 mb-1" %>
                    <%= ef.text_field :lives_in, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "Vive en" %>
                  </div>

                  <div>
                    <%= ef.label :salary_2023, "Salario 2023", class: "block text-sm font-medium text-gray-700 mb-1" %>
                    <%= ef.number_field :salary_2023, step: 0.01, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "Salario 2023" %>
                  </div>

                  <div>
                    <%= ef.label :salary_2024, "Salario 2024", class: "block text-sm font-medium text-gray-700 mb-1" %>
                    <%= ef.number_field :salary_2024, step: 0.01, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "Salario 2024" %>
                  </div>

                  <div>
                    <%= ef.label :emergency_contact, "Contacto de emergencia", class: "block text-sm font-medium text-gray-700 mb-1" %>
                    <%= ef.text_field :emergency_contact, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "Contacto de emergencia" %>
                  </div>

                  <div>
                    <%= ef.label :books, "Libros", class: "block text-sm font-medium text-gray-700 mb-1" %>
                    <%= ef.text_area :books, rows: 3, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "Libros" %>
                  </div>
                </div>
              </details>

              <!-- Acordeón Métodos de acceso -->
              <details class="border border-gray-200 rounded-lg">
                <summary class="cursor-pointer p-4 bg-gray-50 hover:bg-gray-100 font-medium text-gray-900 flex justify-between items-center">
                  Métodos de acceso
                  <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </summary>
                <div class="p-4">
                  <div>
                    <h4 class="font-medium text-gray-900 mb-2">Código numérico PIN</h4>
                    <p class="text-sm text-gray-500 mb-3">Este código se utiliza para ingresar al reloj en una terminal Kiosk. Este código debe ser único por colaborador.</p>
                    <%= f.label :pin_code, "Ingresa un código", class: "block text-sm font-medium text-gray-700 mb-1" %>
                    <%= f.text_field :pin_code, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", placeholder: "Ingresa un código" %>
                  </div>
                </div>
              </details>
            </div>

            <!-- Tab Segmentación -->
            <div x-show="activeTab === 'segmentacion'" class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <% @segmentations.each do |segmentation| %>
                  <div>
                    <h3 class="text-sm font-semibold text-gray-900 mb-3"><%= segmentation.name %></h3>
                    <div class="border border-gray-200 rounded-lg max-h-64 overflow-y-auto">
                      <% segmentation.segmentation_items.each do |item| %>
                        <label class="flex items-center px-4 py-2 hover:bg-gray-50 cursor-pointer border-b border-gray-100 last:border-b-0">
                          <%= ef.check_box :segmentation_item_ids, 
                              { multiple: true, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" }, 
                              item.id, 
                              nil %>
                          <span class="ml-3 text-sm text-gray-700"><%= item.name %></span>
                        </label>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>

            <!-- Tab Permisos -->
            <div x-show="activeTab === 'permisos'" class="space-y-6">
              <div>
                <h3 class="text-lg font-medium text-gray-900 mb-4">Rol del sistema</h3>
                
                <div class="space-y-3">
                  <div class="flex items-start p-4 border border-gray-200 rounded-lg hover:bg-gray-50">
                    <div class="flex items-center h-5">
                      <%= f.radio_button :role, 'employee', class: "focus:ring-blue-500 h-4 w-4 text-blue-600 border-gray-300", checked: user.role == 'employee' || user.new_record? %>
                    </div>
                    <div class="ml-3">
                      <%= f.label :role, "Empleado", value: 'employee', class: "font-medium text-gray-900 cursor-pointer" %>
                      <p class="text-sm text-gray-500">Acceso básico para ver su información personal y recursos del sistema.</p>
                    </div>
                  </div>

                  <div class="flex items-start p-4 border border-gray-200 rounded-lg hover:bg-gray-50">
                    <div class="flex items-center h-5">
                      <%= f.radio_button :role, 'manager', class: "focus:ring-blue-500 h-4 w-4 text-blue-600 border-gray-300", checked: user.role == 'manager' %>
                    </div>
                    <div class="ml-3">
                      <%= f.label :role, "Manager", value: 'manager', class: "font-medium text-gray-900 cursor-pointer" %>
                      <p class="text-sm text-gray-500">Puede gestionar empleados de su departamento y aprobar solicitudes.</p>
                    </div>
                  </div>

                  <div class="flex items-start p-4 border border-gray-200 rounded-lg hover:bg-gray-50">
                    <div class="flex items-center h-5">
                      <%= f.radio_button :role, 'admin', class: "focus:ring-blue-500 h-4 w-4 text-blue-600 border-gray-300", checked: user.role == 'admin' %>
                    </div>
                    <div class="ml-3">
                      <%= f.label :role, "Administrador", value: 'admin', class: "font-medium text-gray-900 cursor-pointer" %>
                      <p class="text-sm text-gray-500">Acceso completo al sistema, incluyendo configuración y gestión de usuarios.</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Acciones -->
  <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
    <%= link_to "Cancelar", admin_users_path, class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <%= f.submit "Guardar", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
<% end %>

<script>
  // Alpine.js se incluye en el layout principal
  document.addEventListener('alpine:init', () => {
    // Configuración adicional si es necesaria
  });
</script>
