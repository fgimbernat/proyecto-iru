<div class="profile-container">
  <!-- Navigation & Actions -->
  <div class="profile-nav">
    <%= link_to admin_users_path, class: "back-link" do %>
      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Volver a usuarios
    <% end %>

    <div class="profile-actions">
      <%= render ButtonComponent.new(variant: :primary, size: :md, href: edit_admin_user_path(@user)) do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Editar
      <% end %>

      <%= button_to admin_user_path(@user), method: :delete, data: { turbo_confirm: "¿Estás seguro de eliminar este usuario?" }, class: "btn btn--outline btn--md text-red-600 border-red-300 hover:bg-red-50" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
        Eliminar
      <% end %>
    </div>
  </div>

  <!-- Profile Header Card -->
  <div class="profile-card-modern">
    <div class="profile-banner">
      <div class="profile-avatar-wrapper">
        <div class="profile-avatar-large">
          <span class="avatar-text">
            <%= @user.employee&.first_name&.first&.upcase || @user.email.first.upcase %>
          </span>
        </div>
      </div>
    </div>
    
    <div class="profile-content">
      <div class="profile-info-section">
        <div>
          <h1 class="profile-name-modern">
            <%= @user.employee&.full_name || @user.email %>
          </h1>
          <p class="profile-email-modern">
            <%= @user.email %>
          </p>
          <div class="profile-badges">
            <%= render BadgeComponent.new(variant: case @user.role
              when 'admin' then :error
              when 'manager' then :warning
              else :primary
            end) do %>
              <%= @user.role.titleize %>
            <% end %>
            
            <% if @user.employee %>
              <%= render BadgeComponent.new(variant: @user.employee.active? ? :success : :neutral) do %>
                <%= @user.employee.employment_status.titleize %>
              <% end %>
            <% end %>
          </div>
        </div>
        
        <% if @user.employee %>
          <div class="employee-number-badge">
            <span class="employee-label">Empleado #</span>
            <span class="employee-number"><%= @user.employee.employee_number %></span>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Main Grid -->
  <div class="profile-grid">
    
    <!-- Main Content -->
    <div class="profile-main">
      
      <!-- Personal Information -->
      <% if @user.employee %>
        <div class="info-card-modern blue">
          <div class="card-header-modern">
            <svg class="card-icon blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            <h2 class="card-title-modern">Información Personal</h2>
          </div>
          
          <div class="card-grid">
            <div style="grid-column: 1 / -1;">
              <span class="field-label">Nombre Completo</span>
              <div class="field-value"><%= @user.employee.full_name %></div>
            </div>
            
            <% if @user.employee.document_number.present? %>
              <div>
                <span class="field-label">
                  <%= @user.employee.document_type&.titleize || 'Documento' %>
                </span>
                <div class="field-value"><%= @user.employee.document_number %></div>
              </div>
            <% end %>
            
            <% if @user.employee.birth_date %>
              <div>
                <span class="field-label">Fecha de Nacimiento</span>
                <div class="field-value">
                  <%= l(@user.employee.birth_date, format: :long) %>
                  <span class="field-value secondary">
                    (<%= ((Time.current - @user.employee.birth_date.to_time) / 1.year).floor %> años)
                  </span>
                </div>
              </div>
            <% end %>
            
            <% if @user.employee.gender.present? %>
              <div>
                <span class="field-label">Género</span>
                <div class="field-value"><%= @user.employee.gender.titleize %></div>
              </div>
            <% end %>
            
            <% if @user.employee.marital_status.present? %>
              <div>
                <span class="field-label">Estado Civil</span>
                <div class="field-value"><%= @user.employee.marital_status.titleize %></div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Work Information -->
      <% if @user.employee %>
        <div class="info-card-modern indigo">
          <div class="card-header-modern">
            <svg class="card-icon indigo" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <h2 class="card-title-modern">Información Laboral</h2>
          </div>
          
          <div class="card-grid">
            <% if @user.employee.department %>
              <div>
                <span class="field-label">Departamento</span>
                <div class="field-value"><%= @user.employee.department.name %></div>
              </div>
            <% end %>
            
            <% if @user.employee.position %>
              <div>
                <span class="field-label">Puesto</span>
                <div class="field-value"><%= @user.employee.position.title %></div>
              </div>
            <% end %>
            
            <div>
              <span class="field-label">Fecha de Contratación</span>
              <div class="field-value"><%= l(@user.employee.hire_date, format: :long) %></div>
            </div>
            
            <div>
              <span class="field-label">Antigüedad</span>
              <div class="field-value">
                <span class="field-value highlight"><%= @user.employee.years_of_service %></span>
                <%= @user.employee.years_of_service == 1 ? 'año' : 'años' %>
              </div>
            </div>
            
            <% if @user.employee.employment_type.present? %>
              <div>
                <span class="field-label">Tipo de Empleo</span>
                <div class="field-value"><%= @user.employee.employment_type.titleize %></div>
              </div>
            <% end %>
            
            <% if @user.employee.manager %>
              <div>
                <span class="field-label">Supervisor</span>
                <div class="field-value">
                  <%= link_to admin_user_path(@user.employee.manager.user), class: "link-modern" do %>
                    <%= @user.employee.manager.full_name %>
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Contact Information -->
      <% if @user.employee && (@user.employee.phone.present? || @user.employee.mobile.present? || @user.employee.address.present?) %>
        <div class="info-card-modern green">
          <div class="card-header-modern">
            <svg class="card-icon green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <h2 class="card-title-modern">Contacto</h2>
          </div>
          
          <div class="card-grid">
            <% if @user.employee.phone.present? %>
              <div>
                <span class="field-label">Teléfono</span>
                <div class="field-value">
                  <a href="tel:<%= @user.employee.phone %>" class="link-modern">
                    <%= @user.employee.phone %>
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                </div>
              </div>
            <% end %>
            
            <% if @user.employee.mobile.present? %>
              <div>
                <span class="field-label">Móvil</span>
                <div class="field-value">
                  <a href="tel:<%= @user.employee.mobile %>" class="link-modern">
                    <%= @user.employee.mobile %>
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                </div>
              </div>
            <% end %>
            
            <% if @user.employee.address.present? %>
              <div style="grid-column: 1 / -1;">
                <span class="field-label">Dirección</span>
                <div class="field-value">
                  <%= @user.employee.address %>
                  <% if @user.employee.city.present? || @user.employee.state.present? %>
                    <br>
                    <span class="field-value muted">
                      <%= [
                        @user.employee.city,
                        @user.employee.state,
                        @user.employee.postal_code
                      ].compact.join(', ') %>
                    </span>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Sidebar -->
    <div class="profile-sidebar">
      
      <!-- Location Card -->
      <% if @user.employee&.office %>
        <div class="sidebar-card-modern gradient-purple">
          <div class="sidebar-header">
            <svg class="sidebar-icon purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <h2 class="sidebar-title">Ubicación</h2>
          </div>
          
          <div class="sidebar-content">
            <div>
              <span class="sidebar-field-label purple">Sede</span>
              <div class="sidebar-field-value primary"><%= @user.employee.office.name %></div>
            </div>
            
            <div>
              <span class="sidebar-field-label purple">Región</span>
              <div class="sidebar-field-value secondary"><%= @user.employee.office.region.name %></div>
            </div>
            
            <% if @user.employee.office.address.present? %>
              <div>
                <span class="sidebar-field-label purple">Dirección</span>
                <div class="sidebar-field-value muted"><%= @user.employee.office.address %></div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- System Information -->
      <div class="sidebar-card-modern">
        <div class="sidebar-header">
          <svg class="sidebar-icon gray" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h2 class="sidebar-title">Información del Sistema</h2>
        </div>
        
        <div class="sidebar-content">
          <div>
            <span class="sidebar-field-label gray">Creado</span>
            <div class="sidebar-field-value primary"><%= l(@user.created_at, format: :long) %></div>
          </div>
          
          <% if @user.updated_at != @user.created_at %>
            <div>
              <span class="sidebar-field-label gray">Última Actualización</span>
              <div class="sidebar-field-value primary"><%= l(@user.updated_at, format: :long) %></div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="sidebar-card-modern gradient-blue">
        <div class="sidebar-header">
          <svg class="sidebar-icon blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
          <h2 class="sidebar-title">Acciones Rápidas</h2>
        </div>
        
        <div class="actions-list">
          <%= link_to edit_admin_user_path(@user), class: "action-item" do %>
            <svg class="action-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            <span class="action-text">Editar información</span>
            <svg class="action-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          <% end %>
          
          <%= link_to admin_users_path, class: "action-item" do %>
            <svg class="action-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
            <span class="action-text">Ver todos los usuarios</span>
            <svg class="action-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
