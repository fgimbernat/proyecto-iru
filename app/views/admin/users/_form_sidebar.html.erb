<div class="user-form-sidebar">
  <!-- Avatar -->
  <div class="sidebar-avatar-section">
    <div class="avatar-circle">
      <svg fill="currentColor" viewBox="0 0 24 24">
        <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" />
      </svg>
    </div>
    <!-- Menú de tres puntos -->
    <button type="button" class="avatar-menu-btn">
      <svg fill="currentColor" viewBox="0 0 20 20">
        <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z" />
      </svg>
    </button>
  </div>

  <%= f.fields_for :employee do |ef| %>
    <div class="sidebar-form-fields">
      <div class="sidebar-form-field">
        <%= ef.label :first_name, "Nombre", class: "field-label" %>
        <%= ef.text_field :first_name, class: "field-input", placeholder: "Nombre" %>
      </div>

      <div class="sidebar-form-field">
        <%= ef.label :last_name, "Apellido", class: "field-label" %>
        <%= ef.text_field :last_name, class: "field-input", placeholder: "Apellido" %>
      </div>

      <div class="sidebar-form-field">
        <%= ef.label :middle_name, "Apodo", class: "field-label" %>
        <%= ef.text_field :middle_name, class: "field-input", placeholder: "Apodo" %>
      </div>

      <div class="sidebar-form-field">
        <%= f.label :email, "Usuario", class: "field-label" %>
        <%= f.text_field :email, class: "field-input", placeholder: "usuario@ejemplo.com" %>
      </div>

      <div class="sidebar-form-field">
        <%= f.label :password, "Contraseña", class: "field-label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "field-input", placeholder: "••••••••" %>
      </div>

      <div class="sidebar-form-field">
        <%= ef.label :email, "Email", class: "field-label" %>
        <%= ef.email_field :email, class: "field-input", placeholder: "email@ejemplo.com" %>
      </div>
    </div>
  <% end %>
</div>
