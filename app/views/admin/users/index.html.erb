<% content_for :page_title, "Usuarios" %>

<div class="users-container">
  <!-- Header -->
  <div class="users-header">
    <div class="users-title-section">
      <h1 class="users-title">Usuarios</h1>
      <svg class="users-title-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
      </svg>
    </div>
    
    <div class="users-actions">
      <%= render ButtonComponent.new(variant: :ghost, size: :md) do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        Exportar
      <% end %>
      
      <%= render ButtonComponent.new(variant: :outline, size: :md) do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
        Invitar
      <% end %>
      
      <%= render ButtonComponent.new(variant: :primary, size: :md, href: new_admin_user_path) do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Crear usuario
      <% end %>
    </div>
  </div>

  <!-- Filters Card -->
  <div class="users-filters-card">
    <div class="users-filters-header">
      <%= form_with url: admin_users_path, method: :get, class: "users-filters-form" do |f| %>
        <div class="users-search-wrapper">
          <svg class="users-search-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
          <%= f.text_field :search, 
              placeholder: "Buscar por nombre o email...", 
              value: params[:search],
              class: "users-search-input" %>
        </div>
        
        <%= f.select :status, 
            options_for_select([
              ['Todos los estados', 'all'],
              ['Activos', 'active'],
              ['Sin ingresar', 'no_login'],
              ['Inactivos', 'inactive']
            ], params[:status] || 'all'),
            {},
            class: "users-filter-select",
            onchange: "this.form.submit()" %>
      <% end %>
    </div>

    <!-- Count Bar -->
    <div class="users-count-bar">
      <div class="users-count-badge">
        <span class="users-count-number"><%= @users.count %></span>
        <span><%= @users.count == 1 ? 'usuario' : 'usuarios' %></span>
      </div>
    </div>
  </div>

  <!-- Table Card -->
  <div class="users-table-card">
    <% if @users.any? %>
      <div class="users-table-wrapper">
        <table class="users-table">
          <thead class="users-table-header">
            <tr class="users-table-header-row">
              <th>Usuario</th>
              <th>
                <span class="header-sortable">
                  Fecha de creación
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </span>
              </th>
              <th>Fecha de contratación</th>
              <th>Estado</th>
              <th></th>
            </tr>
          </thead>
          <tbody class="users-table-body">
            <% @users.each_with_index do |user, index| %>
              <tr>
                <td>
                  <div class="user-cell">
                    <% 
                      avatar_colors = ['avatar-orange', 'avatar-blue', 'avatar-green', 'avatar-purple', 'avatar-pink', 'avatar-teal']
                      avatar_class = avatar_colors[index % avatar_colors.length]
                    %>
                    <div class="user-avatar <%= avatar_class %>">
                      <% if user.employee&.first_name %>
                        <%= user.employee.first_name.first.upcase %><%= user.employee.last_name.first.upcase %>
                      <% else %>
                        <%= user.email.first(2).upcase %>
                      <% end %>
                    </div>
                    <div class="user-info">
                      <p class="user-name"><%= user.display_name %></p>
                      <p class="user-email"><%= user.email %></p>
                    </div>
                  </div>
                </td>
                <td>
                  <span class="date-cell"><%= user.created_at.strftime("%d/%m/%Y") %></span>
                </td>
                <td>
                  <% if user.employee&.hire_date %>
                    <span class="date-cell"><%= user.employee.hire_date.strftime("%d/%m/%Y") %></span>
                  <% else %>
                    <span class="date-cell date-empty">—</span>
                  <% end %>
                </td>
                <td>
                  <div class="status-cell">
                    <span class="status-badge status-active">
                      <span class="status-dot dot-active"></span>
                      Activo
                    </span>
                    <span class="status-date">Últ. actualización: <%= user.updated_at.strftime("%d/%m/%Y") %></span>
                  </div>
                </td>
                <td>
                  <div class="actions-cell">
                    <%= link_to admin_user_path(user), class: "action-button", title: "Ver detalles" do %>
                      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="users-empty-state">
        <svg class="empty-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
        <h3 class="empty-title">No se encontraron usuarios</h3>
        <p class="empty-description">
          <% if params[:search].present? %>
            No hay usuarios que coincidan con tu búsqueda.
          <% else %>
            Comienza creando tu primer usuario.
          <% end %>
        </p>
        <% unless params[:search].present? %>
          <%= render ButtonComponent.new(variant: :primary, size: :md, href: new_admin_user_path) do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Crear primer usuario
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
