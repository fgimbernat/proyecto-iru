<% content_for :page_title, "Tipos de Política" %>

<div class="resource-container">
  <!-- Header -->
  <div class="resource-header">
    <div class="resource-title-section">
      <h1 class="resource-title">Tipos de Política</h1>
      <p class="resource-subtitle">Gestiona los tipos de políticas de tiempo libre (vacaciones, días de estudio, etc.)</p>
    </div>
    
    <div class="resource-actions">
      <% if policy(PolicyType).create? %>
        <%= render ButtonComponent.new(variant: :primary, size: :md, href: new_admin_policy_type_path) do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Nuevo Tipo
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Count -->
  <div class="resource-filters-card">
    <div class="resource-count">
      <span class="count-number"><%= @policy_types.total_count %></span>
      <span><%= @policy_types.total_count == 1 ? 'tipo de política' : 'tipos de política' %></span>
    </div>
  </div>

  <!-- Table -->
  <% if @policy_types.any? %>
    <div class="resource-table-card">
      <div class="resource-table-wrapper">
        <table class="resource-table">
          <thead class="resource-table-header">
            <tr>
              <th>Nombre</th>
              <th class="text-center">Unidad</th>
              <th class="text-center">Políticas</th>
              <th class="text-center">Estado</th>
              <th class="text-right">Acciones</th>
            </tr>
          </thead>
          <tbody class="resource-table-body">
            <% @policy_types.each do |policy_type| %>
              <tr>
                <td>
                  <div class="cell-title"><%= policy_type.name %></div>
                </td>
                <td class="text-center">
                  <%= render BadgeComponent.new(type: policy_type.days? ? :info : :warning) do %>
                    <%= policy_type.days? ? 'Días' : 'Horas' %>
                  <% end %>
                </td>
                <td class="text-center">
                  <strong><%= policy_type.policies.count %></strong>
                </td>
                <td class="text-center">
                  <%= render BadgeComponent.new(type: policy_type.active? ? :success : :neutral) do %>
                    <%= policy_type.active? ? 'Activo' : 'Inactivo' %>
                  <% end %>
                </td>
                <td>
                  <div class="resource-actions-cell">
                    <%= link_to admin_policy_type_path(policy_type), class: "resource-action-link action-view", title: "Ver detalles" do %>
                      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                      </svg>
                    <% end %>
                    
                    <% if policy(policy_type).update? %>
                      <%= link_to edit_admin_policy_type_path(policy_type), class: "resource-action-link action-edit", title: "Editar" do %>
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                      <% end %>
                    <% end %>

                    <% if policy(policy_type).toggle_status? %>
                      <%= button_to toggle_status_admin_policy_type_path(policy_type),
                        method: :patch,
                        class: "resource-action-link action-toggle",
                        title: policy_type.active? ? "Desactivar" : "Activar" do %>
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <% if policy_type.active? %>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" />
                          <% else %>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                          <% end %>
                        </svg>
                      <% end %>
                    <% end %>
                    
                    <% if policy(policy_type).destroy? %>
                      <%= button_to admin_policy_type_path(policy_type), 
                        method: :delete,
                        data: { turbo_confirm: "¿Estás seguro de eliminar este tipo de política?" },
                        class: "resource-action-link action-delete",
                        title: "Eliminar" do %>
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                      <% end %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Pagination -->
    <% if @policy_types.total_pages > 1 %>
      <div class="mt-6">
        <%= paginate @policy_types %>
      </div>
    <% end %>
  <% else %>
    <!-- Empty State -->
    <div class="resource-table-card">
      <div class="resource-empty-state">
        <div class="resource-empty-icon">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
        <h3 class="resource-empty-title">No hay tipos de política creados</h3>
        <p class="resource-empty-description">Comienza creando tu primer tipo de política (ej: Vacaciones, Días de estudio).</p>
        <% if policy(PolicyType).create? %>
          <%= render ButtonComponent.new(variant: :primary, size: :md, href: new_admin_policy_type_path) do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Nuevo Tipo
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
