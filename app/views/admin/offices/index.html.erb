<% content_for :page_title, "Sedes" %>

<div class="resource-container">
  <!-- Header -->
  <div class="resource-header">
    <div class="resource-title-section">
      <h1 class="resource-title">Sedes</h1>
      <p class="resource-subtitle">Gestiona las sedes y oficinas de tu organización</p>
    </div>
    
    <div class="resource-actions">
      <% if policy(Office).create? %>
        <%= render ButtonComponent.new(variant: :primary, size: :md, href: new_admin_office_path) do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Nueva Sede
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Filters -->
  <div class="resource-filters-card">
    <div class="resource-filters-header">
      <%= form_with url: admin_offices_path, method: :get, class: "resource-filters-form" do |f| %>
        <div class="resource-filter-group">
          <%= f.label :region_id, "Región", class: "resource-filter-label" %>
          <%= f.select :region_id, 
            options_from_collection_for_select(@regions, :id, :name, params[:region_id]),
            { include_blank: "Todas las regiones" },
            class: "resource-filter-select" %>
        </div>
        
        <div style="padding-top: 22px;">
          <%= render ButtonComponent.new(variant: :primary, type: "submit", size: :md) do %>
            Filtrar
          <% end %>
        </div>
      <% end %>
    </div>
    
    <div class="resource-count">
      <span class="count-number"><%= @offices.count %></span>
      <span><%= @offices.count == 1 ? 'sede' : 'sedes' %></span>
    </div>
  </div>

  <!-- Table -->
  <% if @offices.any? %>
    <div class="resource-table-card">
      <div class="resource-table-wrapper">
        <table class="resource-table">
          <thead class="resource-table-header">
            <tr>
              <th>Nombre</th>
              <th>Región</th>
              <th>Dirección</th>
              <th class="text-center">Empleados</th>
              <th class="text-center">Estado</th>
              <th class="text-right">Acciones</th>
            </tr>
          </thead>
          <tbody class="resource-table-body">
            <% @offices.each do |office| %>
              <tr>
                <td>
                  <div class="cell-title"><%= office.name %></div>
                </td>
                <td><%= office.region_name %></td>
                <td>
                  <% if office.address.present? %>
                    <%= office.address.truncate(50) %>
                  <% else %>
                    <span class="cell-muted">—</span>
                  <% end %>
                </td>
                <td class="text-center">
                  <strong><%= office.employees_count %></strong>
                </td>
                <td class="text-center">
                  <%= render BadgeComponent.new(type: office.active? ? :success : :neutral) do %>
                    <%= office.active? ? 'Activa' : 'Inactiva' %>
                  <% end %>
                </td>
                <td>
                  <div class="resource-actions-cell">
                    <%= link_to admin_office_path(office), class: "resource-action-link action-view", title: "Ver detalles" do %>
                      <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                      </svg>
                    <% end %>
                    
                    <% if policy(office).update? %>
                      <%= link_to edit_admin_office_path(office), class: "resource-action-link action-edit", title: "Editar" do %>
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                      <% end %>
                    <% end %>
                    
                    <% if policy(office).destroy? %>
                      <%= button_to admin_office_path(office), 
                        method: :delete,
                        data: { turbo_confirm: "¿Estás seguro de eliminar esta sede?" },
                        class: "resource-action-link action-delete",
                        title: "Eliminar" do %>
                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                      <% end %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Pagination -->
    <% if @offices.total_pages > 1 %>
      <div class="mt-6">
        <%= paginate @offices %>
      </div>
    <% end %>
  <% else %>
    <!-- Empty State -->
    <div class="resource-table-card">
      <div class="resource-empty-state">
        <div class="resource-empty-icon">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
          </svg>
        </div>
        <h3 class="resource-empty-title">
          <% if params[:region_id].present? %>
            No hay sedes en esta región
          <% else %>
            No hay sedes creadas
          <% end %>
        </h3>
        <p class="resource-empty-description">
          <% if params[:region_id].present? %>
            Intenta seleccionar otra región o crea una nueva sede.
          <% else %>
            Comienza creando tu primera sede para la organización.
          <% end %>
        </p>
        <% if policy(Office).create? %>
          <%= render ButtonComponent.new(variant: :primary, size: :md, href: new_admin_office_path) do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Nueva Sede
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
